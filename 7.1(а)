#include <iostream>
using namespace std;
const int N=10;
int otric(int* p, int sum) {
	for (int j = 0; j < N; j++) {
		if (p[j] < 0) {
			sum = sum + 1;
		}
	}
	return sum;
}


int main() {
	setlocale(LC_ALL, "Rus");
	int a[N];

	for (int i = 0; i < N; i++) {
		a[i] = rand() % 100 - 51;
		cout << a[i] << " ";
	}
	cout << endl;
	int S=0;
	otric(a, S);
	cout << "Кол-во отрицательных элментов в массиве: " << otric(a, S);
	return 0;
}
