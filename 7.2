#include <iostream>
#include <cmath>
const double PI = 3.14159;
using namespace std;

double angle(double a, double b, double c) {
	double ugol1 = acos((pow(a, 2) + pow(b, 2) - pow(c, 2)) / (2 * a * b));
	ugol1 = (ugol1 * 180) / PI;
	return ugol1;
}

void angles(int n, double treug[]) {
	for (int i = 0; i < n; i++) {
		double a = treug[i];
		double b = treug[(i + 1) % n];
		double c = treug[(i + 2) % n];
		double ugol = angle(a, b, c);
		cout << "Угол " << (i + 1) << " равен "<< ugol << endl;
	}
}



