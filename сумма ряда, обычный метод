#include <iostream>
using namespace std;

int fact(int N) {
	if (N == 0) {
		return 1;
	}
	if (N == 1) {
		return 1;
	}
	
	return N * fact(N - 1);
}

double func(double x, int N) {
	return pow(x, 2 * N + 1) / (fact(2 * N + 1));
}

double sum(double x, int N) {
	if (N == 0) {
		return x;
	}
	else {
		return sum(x, N - 1) + func(x, N);

	}
}

int main()
{
	setlocale(LC_ALL, "Rus");
	double x;
	int N;
	cout << "Введите x: ";
	cin >> x;
	cout << endl;
	cout << "Введите кол-во чисел в ряде: ";
	cin >> N;
	cout << endl;

	cout << "Сумма ряда равна = " << sum(x, N);


	return 0;

}
